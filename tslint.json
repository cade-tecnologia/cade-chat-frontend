{
  "extends": "tslint:recommended",
  "rulesDirectory": [
    "codelyzer"
  ],
  "rules": {
    "ordered-imports": false,
    "quotemark": [true, "single"],
    "object-literal-sort-keys": false,
    "arrow-parens": false,
    "semicolon": false,
    "prefer-const": false,
    "no-var-keyword": true,
    "no-var-requires": true,
    "class-name": false,
    "interface-name": false,

    "member-access": true,
    "member-ordering": {
      "options": {
        "order": "fields-first"
      }
    },
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "arrow-call-signature",
      "member-variable-declaration",
      "array-destructuring",
      "property-declaration"
    ],
    "unified-signatures": true,
    "await-promise": true,
    "curly": [
      true,
      "ignore-same-line"
    ],
    "function-constructor": true,
    "import-blacklist": [
      true,
      "lodash"
    ],
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd"
    ],
    "no-construct": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": [
      true,
      "check-parameters"
    ],
    "no-eval": true,
    "ban-ts-ignore": false
  }
}
